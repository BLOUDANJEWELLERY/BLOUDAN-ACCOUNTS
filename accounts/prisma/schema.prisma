generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  accountNo     Int       @unique
  name          String
  type          String    // e.g. "Customer" or "Supplier"
  phone         String?
  crOrCivilIdNo String?   // C.R. or Civil ID Number
  createdAt     DateTime  @default(now())

  vouchers      Voucher[] // Relation field to Voucher model
}

model Voucher {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  mvn         String?   // Manual Voucher Number
  description     String?
vt          String   // Voucher Type (REC, INV, etc.)
  gold        Float
  kwd         Float

	accountId   String   @db.ObjectId
  account     Account  @relation(fields: [accountId], references: [id])

 createdAt   DateTime @default(now())
}