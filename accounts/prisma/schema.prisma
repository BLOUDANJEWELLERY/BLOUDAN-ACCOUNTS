generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Account {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  accountNo       Int      @unique
  name            String
  type            String   // e.g. "Customer" or "Supplier"
  phone           String?
  crOrCivilIdNo   String?  // C.R. or Civil ID Number
}

model Voucher {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  date        DateTime
  mvn         String   // Manual Voucher Number
  vt          String   // Voucher Type (REC, INV, etc.)
  gold        Float
  kwd         Float

accountNo   Int      // references Account.accountNo (not a Prisma relation for simplicity)

  createdAt   DateTime @default(now())
}